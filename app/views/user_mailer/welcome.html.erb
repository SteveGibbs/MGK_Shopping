<p>Your email:<%= @customer %> </p>
<p>Your address: <%= @address %> </p>
<br>
<hr>
<p>Item list:</p>
<ul>
  <% @items.each do |item| %>
    <li>Brand: <%=item.product.brand.brand_name %> | Item: <%= item.product.product_name %> | Quantity: <%= item.quantity %> | Cost: $<%= item.product.price * item.quantity%></li>
  <% end %>
</ul>
