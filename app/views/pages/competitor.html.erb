<h1>Web scraping competitor live pricing</h1>

<h2>Male watches</h2>

<div class="row">
<% @getprice[:male].each do |item| %>
  <div class="col-4">
    <p><%= image_tag(item[:image]) %></p>
    <p><%= item[:name] %></p>
    <p><%= item[:price] %></p>
    <p><%= image_tag(item[:supplier], :class => "supplier_logo") %></p>
    <a href="<%= item[:gotoshop] %>" target="_blank">Go to shop</a>
  </div>
<% end %>

</div>

<h2>Female watches</h2>

<div class="row">
<% @getprice[:female].each do |item| %>
  <div class="col-4">
  <p><%= image_tag(item[:image]) %></p>
  <p><%= item[:name] %></p>
  <p><%= item[:price] %></p>
  <p><%= image_tag(item[:supplier], :class => "supplier_logo") %></p>
  <a href="<%= item[:gotoshop] %>" target="_blank">Go to shop</a>
  </div>
<% end %>
</div>

