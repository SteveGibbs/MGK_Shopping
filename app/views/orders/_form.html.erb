<%= form_for(@order) do |f| %>

<div class="row">
    <p>
        <div class="col-2 left">
            <span>Email</span>
        </div>
        <div class="col-10 left">
            <%= f.email_field :name, :required => true, :autofocus => true %>
        </div>
    </p>
</div>

<br>
<div class="row">
    <p>
        <div class="col-2 left">
        <span>Address</span>
        </div>
        <div class="col-10 left">
        <%= f.text_field :address1 %>
        </div>
    </p>
</div>

<div class="row">
    <div class="col-2">
    <%= f.submit %>
    </div>
</div>

<% end %>
