<h1>This is the page of <%= @product.product_name %></h1>

  <p>Price: <%= number_to_currency(@product.price) %></p>
  <p>Brand: <%= @product.brand.brand_name %></p>
  <p>Description: <%= @product.product_desc1 %></p>
  <p><%= image_tag(@product.image) %></p>

<% unless @current_user %>
  <%= button_to "Add to cart", items_path(:product_id => @product.id) %>
<% else %>
  <%= link_to("Edit", edit_product_path(@product)) %>
  <%= link_to("Delete", product_path(@product),method: :delete, data: {confirm: "Are you sure?"}) %>
<% end %>
