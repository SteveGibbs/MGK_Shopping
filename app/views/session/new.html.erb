<h1>Admin login</h1>

<fieldset>
  <legend>Enter login details</legend>
    <%= form_tag login_path do %>
      <%= label_tag :email %>
      <%= email_field_tag :email, '', required: true %>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <%= submit_tag 'Login' %>
    <% end %>
</fieldset>
