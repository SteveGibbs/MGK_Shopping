<!DOCTYPE html>
<html>
<head>
  <title>MgkShoppingApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="//fonts.googleapis.com/css?family=Lato" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.css"/>
</head>
<body>
  <nav>
    <%= link_to("All products", products_path) %>

    <!-- Admin view -->

    <% unless @current_user %>
      <%= link_to("Admin login", login_path) %>
    <% else %>
      <%= link_to("New Product", new_product_path) %>
      <%= link_to("All Orders", orders_path) %>
      <%= link_to("Competitors", competitor_path) %>
    <% end %>

    <!-- Admin view -->
  
    <% if !@current_user %>
      <%= link_to("Current cart: #{@current_cart.id}",cart_path(@current_cart)) %>
    <% end %>

    <% if @current_user %>
      <p>Logged : <%= @current_user.first_name %> (<%= link_to "Logout", logout_path, method: :delete %>)</p>
    <% end %>
  </nav>


<script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>
<%= yield %>

</body>
</html>
